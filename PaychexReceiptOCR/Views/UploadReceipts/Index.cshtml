}
<!DOCTYPE html>
<html>
<head>
    <title>Image Upload</title>
</head>
<body>
    @if(ViewBag.confirmation != "")
    {
        <h1>@ViewBag.confirmation</h1>
    }
    <form method="post" enctype="multipart/form-data" asp-controller="UploadReceipts" asp-action="Post">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload a single receipt using this form:</p>
                <input type="file" name="receipts" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload">
            </div>
        </div>
    </form>

</body>
</html>